<div class='cart-container'>
	<div class='cart-list'>
		{{#each payload}}
			<div class='cart-item'>
				<p>{{this._id.title}}</p>
				<p>${{this._id.price}}</p>
				<p>x{{this.quantity}}</p>
				<p><strong>${{multiply this._id.price this.quantity}}</strong></p>
			</div>
		{{/each}}

		<div>
			<p class='cart-total-text'>TOTAL: ${{total payload}}</p>
			<button class='cart-total-button'>PURCHASE</button>
		</div>
	</div>

</div>